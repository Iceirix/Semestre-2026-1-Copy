<robot name="robot1_xy"> 
  <!--Definición de eslabones--> 
  <link name = "base_link_r1">
    <visual>
      <origin xyz = "0 0 0.05" rpy = "0 0 0"/> 
      <geometry> 
        <box size = "0.2 0.2 0.1"/> 
      </geometry> 
      <material name = "Black"> 
        <color rgba = "0 0 0 1.0"/> 
      </material> 
    </visual> 
  </link> 
 
  <link name = "shoulder_link_r1"> 
    <visual> 
      <origin xyz = "0.15 0 0" rpy = "0 0 0"/> 
      <geometry> 
        <box size = "0.3 0.03 0.03"/> 
      </geometry> 
      <material name = "Red"> 
        <color rgba = "1 0 0 1.0"/> 
      </material> 
    </visual> 
  </link> 

  <link name = "arm_link_r1"> 
    <visual> 
      <origin xyz = "0.15 0 0" rpy = "0 0 0"/> 
      <geometry> 
        <box size = "0.3 0.03 0.03"/> 
      </geometry> 
      <material name = "Green"> 
        <color rgba = "0 1 0 1.0"/> 
      </material> 
    </visual> 
  </link> 
  
  <link name = "forearm_link_r1"> 
    <visual> 
      <origin xyz = "0.15 0 0" rpy = "0 0 0"/> 
      <geometry> 
        <box size = "0.3 0.03 0.03"/> 
      </geometry> 
      <material name = "Blue"> 
        <color rgba = "0 0 1 1.0"/> 
      </material> 
    </visual> 
  </link> 
 
  <!--Definición de juntas - Plano XY (horizontal)--> 
  <joint name = "shoulder_joint_r1" type = "revolute"> 
    <parent link = "base_link_r1"/> 
    <child link = "shoulder_link_r1"/> 
    <origin xyz = "0 0 0.1" rpy = "0 0 0"/> 
    <axis xyz = "0 0 1"/> 
    <limit effort="10.0" lower="-3.14" upper="3.14" velocity="3.14"/>
  </joint>

  <joint name = "arm_joint_r1" type = "revolute"> 
    <parent link = "shoulder_link_r1"/> 
    <child link = "arm_link_r1"/> 
    <origin xyz = "0.3 0 0" rpy = "0 0 0"/> 
    <axis xyz = "0 0 1"/> 
    <limit effort="10.0" lower="-3.14" upper="3.14" velocity="3.14"/>
  </joint>
  
  <joint name = "forearm_joint_r1" type = "revolute"> 
    <parent link = "arm_link_r1"/> 
    <child link = "forearm_link_r1"/> 
    <origin xyz = "0.3 0 0" rpy = "0 0 0"/> 
    <axis xyz = "0 0 1"/> 
    <limit effort="10.0" lower="-3.14" upper="3.14" velocity="3.14"/>
  </joint>
 
</robot>